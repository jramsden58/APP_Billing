# ==============================================================================
# APP Billing System - Environment Configuration (TEMPLATE)
# ==============================================================================
# Copy this file to .env and update values for your workstation.
# DO NOT commit .env to version control - it may contain sensitive data.
# ==============================================================================

# --- Network Configuration ---
NETWORK_SHARE_PATH=\\server\APP_Billing\

# --- Hospital Site Configuration ---
DEFAULT_SITE=RCH

# --- Superuser Configuration ---
SUPERUSER_DEFAULT_PASSWORD=

# --- File Paths ---
LOCAL_BACKUP_PATH=C:\Users\%USERNAME%\Documents\APP_Billing_Backup\
LOCAL_PDF_PATH=C:\Users\%USERNAME%\Documents\APP_Billing_Reports\

# --- Application Settings ---
NETWORK_RETRY_ATTEMPTS=3
NETWORK_RETRY_DELAY_SEC=2
MAX_PROCEDURES_PER_PAGE=6

# --- Logging ---
DEBUG_LOGGING=FALSE
LOG_FILE_PATH=C:\Users\%USERNAME%\Documents\APP_Billing_Log.txt
